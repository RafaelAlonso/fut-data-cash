                      as: :select,
                      collection: @teams.map { |t| [t.name, t.id] },
                      input_html: { class: 'form-select' },
                      wrapper_html: { class: 'flex-grow-1 ps-3' },
                      label: 'Time adversÃ¡rio' %>
        </div>
        <div>
          <%= f.submit "Comparar", class: "btn btn-primary mt-3 w-100" %>
        </div>
      <% end %>
    </div>
    <div class="col-12 my-5">
      <div class="card p-4" data-controller="stats">
        <%= turbo_stream_from :head_to_head %>
